doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sign in
  link(rel='stylesheet' href='/static/signin.css')
.container
  .container-content
    h2.heading Sign in
    form.form(action='/signin' method='post')
      input.btn(id='id' type='text' name='id' placeholder='Enter user id')
      input.btn(id='pass' type='password' name='pass' placeholder='Enter password' autocomplete='off' )
      input.submit(type='submit' value='Login')
    .alert.danger #{cont}
